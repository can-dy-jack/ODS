page{
    background-color: #f2f2f2;
}
/* 头像区域  */
.user_infor_wrap{
    height: 45vh;
    /* background-color: var(--themeColor); */
    background: linear-gradient(to bottom,#1296DB,#5d5db9);
    position: relative;
    overflow: hidden;
}
.user_infor_wrap .user_img_wrap{
    position: relative;
}
.user_infor_wrap .user_img_wrap .user_img{
    height: 45vh;
    width: 100%;
    /* 高斯模糊 */
    filter: blur(8rpx);
}
.user_infor_wrap .user_img_wrap .user_info{
    position: absolute;left: 50%;top: 30%;
    transform: translate(-50%);
    text-align: center;
    background-color: rgba(0,0,0,0);
}
.user_infor_wrap .user_img_wrap .user_info .user_icon{
    width: 150rpx;
    height:150rpx;
    border-radius: 50%;
}
.user_infor_wrap .user_img_wrap .user_info .user_name{
    color: white;
    font-size: 40rpx;
    margin-top: 60rpx;
    background-color: rgba(0,0,0,0);
}

.user_infor_wrap .user_btn{
    position: absolute;
    left: 50%;transform: translate(-50%);
    top: 40%;
    background-color: rgba(0,0,0,0);
}
.user_infor_wrap .user_btn navigator{
    background-color: rgba(0,0,0,0);
    border: 10rpx solid rgba(0, 0, 0, 0.2);
    color: white;
    font-size: 50rpx;
    padding: 10rpx 40rpx;
    border-radius: 20rpx;
}
.user_infor_wrap .user_btn navigator:hover{
    background-color: rgba(0,0,0,0.4);
}
/* 信息 content */
.user_content{
    position: relative;
}
.user_content .user_main {
    position: absolute;
    width: 90%;
    left: 50%;transform: translate(-50%);
    top: -40rpx;
}